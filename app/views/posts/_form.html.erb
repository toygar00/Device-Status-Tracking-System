<%= form_for @post do |f| %>
  <p>
    <%= f.label :brand %><br>
    <%= f.text_field :brand %>
  </p>

  <p>
    <%= f.label :model %><br>
    <%= f.text_field :model %>
  </p>

  <p>
    <%= f.label :problem %><br>
    <%= f.text_area :problem %>
  </p>

  <p>
    <%= f.label :result %><br>
    <%= f.text_area :result %>
  </p>
 
  <p>
    <%= f.submit "Değiştir" %>
  </p>
<% end %>

